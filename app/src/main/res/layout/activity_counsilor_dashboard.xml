<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".counselor.CounsilorDashboard">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back"
        android:contentDescription="@string/background_image" />

    <!-- Dark overlay for readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- 50% black tint -->

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counselor_dashboard"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/viewReportsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_user_reports"
            android:backgroundTint="@color/soft_pink_dark"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/chatWithUsersBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chat_with_users"
            android:backgroundTint="@color/soft_pink_dark"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/publishResourceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/publish_resource"
            android:backgroundTint="@color/soft_pink_dark"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</RelativeLayout>