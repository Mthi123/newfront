<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.mainbtns.AdminReportStatsActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back"
        android:contentDescription="@string/background_image" />

    <!-- Dark overlay for readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- 50% black tint -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#80FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Statistics"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="32dp" />

            <!-- Button 1: View a list of all reports -->
            <Button
                android:id="@+id/viewAllReportsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Reports"
                android:background="@drawable/button_rounded_primary"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Button 2: View reports by Incident -->
            <Button
                android:id="@+id/reportsByTypeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Reports by Type"
                android:background="@drawable/button_rounded_primary"
                android:backgroundTint="@color/soft_pink_dark"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Button 3: View Incident Types by location -->
            <Button
                android:id="@+id/reportsByLocationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Reports by Location"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/button_rounded_secondary"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Button 4: View reports over time -->
            <Button
                android:id="@+id/reportsByStatusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Reports by Time"
                android:backgroundTint="@color/soft_pink_dark"
                android:background="@drawable/button_rounded_primary"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>