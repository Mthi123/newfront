<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@drawable/back">

    <TextView
        android:id="@+id/resourceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resource Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/resourceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resource Type"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/resourceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/resourcePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: N/A"
        android:layout_marginTop="8dp"
        android:autoLink="phone"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/resourceEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: N/A"
        android:autoLink="email"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/resourceWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website: N/A"
        android:autoLink="web"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/resourceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: N/A"
        android:autoLink="map"
        android:textColor="@android:color/white"/>

</LinearLayout>