<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#20FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="16dp"
        android:background="@drawable/convo">

        <TextView
            android:id="@+id/tvResourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_title"
            android:textStyle="bold"
            android:textSize="18sp"

            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvResourceContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resource_content_goes_here"
            android:layout_marginTop="6dp"
            android:textSize="14sp"

            android:textColor="#CCCCCC" />

    </LinearLayout>

</androidx.cardview.widget.CardView>